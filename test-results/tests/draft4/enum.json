[
    {
        "description": "simple enum validation",
        "schema": {
            "enum": [
                1,
                2,
                3
            ]
        },
        "tests": [
            {
                "description": "one of the enum is valid",
                "data": 1,
                "valid": true
            },
            {
                "description": "something else is invalid",
                "data": 4,
                "valid": false,
                "errors": [
                    {
                        "message": "must be an enum value",
                        "info": {
                            "partialSchema": {
                                "enum": [
                                    1,
                                    2,
                                    3
                                ]
                            },
                            "cContext": "/",
                            "errorId": {
                                "group": "json-schema-validation",
                                "section": "5.5.1.2.a"
                            }
                        },
                        "path": "/"
                    }
                ]
            }
        ]
    },
    {
        "description": "heterogeneous enum validation",
        "schema": {
            "enum": [
                6,
                "foo",
                [],
                true,
                {
                    "foo": 12
                }
            ]
        },
        "tests": [
            {
                "description": "one of the enum is valid",
                "data": [],
                "valid": true
            },
            {
                "description": "something else is invalid",
                "data": null,
                "valid": false,
                "errors": [
                    {
                        "message": "must be an enum value",
                        "info": {
                            "partialSchema": {
                                "enum": [
                                    6,
                                    "foo",
                                    [],
                                    true,
                                    {
                                        "foo": 12
                                    }
                                ]
                            },
                            "cContext": "/",
                            "errorId": {
                                "group": "json-schema-validation",
                                "section": "5.5.1.2.a"
                            }
                        },
                        "path": "/"
                    }
                ]
            },
            {
                "description": "objects are deep compared",
                "data": {
                    "foo": false
                },
                "valid": false,
                "errors": [
                    {
                        "message": "must be an enum value",
                        "info": {
                            "partialSchema": {
                                "enum": [
                                    6,
                                    "foo",
                                    [],
                                    true,
                                    {
                                        "foo": 12
                                    }
                                ]
                            },
                            "cContext": "/",
                            "errorId": {
                                "group": "json-schema-validation",
                                "section": "5.5.1.2.a"
                            }
                        },
                        "path": "/"
                    }
                ]
            }
        ]
    },
    {
        "description": "enums in properties",
        "schema": {
            "type": "object",
            "properties": {
                "foo": {
                    "enum": [
                        "foo"
                    ]
                },
                "bar": {
                    "enum": [
                        "bar"
                    ]
                }
            },
            "required": [
                "bar"
            ]
        },
        "tests": [
            {
                "description": "both properties are valid",
                "data": {
                    "foo": "foo",
                    "bar": "bar"
                },
                "valid": true
            },
            {
                "description": "missing optional property is valid",
                "data": {
                    "bar": "bar"
                },
                "valid": true
            },
            {
                "description": "missing required property is invalid",
                "data": {
                    "foo": "foo"
                },
                "valid": false,
                "errors": [
                    {
                        "message": "is missing required field bar",
                        "info": {
                            "partialSchema": {
                                "required": [
                                    "bar"
                                ]
                            },
                            "cContext": "/",
                            "errorId": {
                                "group": "json-schema-validation",
                                "section": "5.4.3.2.a"
                            }
                        },
                        "path": "/"
                    }
                ]
            },
            {
                "description": "missing all properties is invalid",
                "data": {},
                "valid": false,
                "errors": [
                    {
                        "message": "is missing required field bar",
                        "info": {
                            "partialSchema": {
                                "required": [
                                    "bar"
                                ]
                            },
                            "cContext": "/",
                            "errorId": {
                                "group": "json-schema-validation",
                                "section": "5.4.3.2.a"
                            }
                        },
                        "path": "/"
                    }
                ]
            }
        ]
    }
]